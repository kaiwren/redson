<h1>New student</h1>

<%= render 'form' %>

<%= link_to 'Back', students_path %>

<script type="text/javascript">
  $(document).ready(function(){
    $('form.new_student').each(function(n){
      var widget = Opal.Student.Widget.$new($(this));
      widget.$registerObserver(
        {
          widget_created_handler: function(event){
            window.location.href = "/students";
          }
        },
        {
          on: 'created'
        }
      );
    });
  });
</script>